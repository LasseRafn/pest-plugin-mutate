{
    "name": "gehrisandro/pest-plugin-mutate",
    "description": "Mutates your code to find untested cases",
    "keywords": [
        "php",
        "framework",
        "pest",
        "unit",
        "test",
        "testing",
        "mutate",
        "mutation",
        "plugin"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "infection/include-interceptor": "^0.2.5",
        "nikic/php-parser": "^v4.17.1",
        "pestphp/pest-plugin": "^v2.1.1"
    },
    "require-dev": {
        "pestphp/pest": "^v2.24.0",
        "pestphp/pest-dev-tools": "^2.9",
        "pestphp/pest-plugin-type-coverage": "^v2.4.0"
    },
    "autoload": {
        "psr-4": {
            "Pest\\Mutate\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Fixtures\\": "tests/Fixtures"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "pest": {
            "plugins": [
                "Pest\\Mutate\\Plugin"
            ]
        }
    },
    "scripts": {
        "refacto": "rector",
        "lint": "pint",
        "test:refacto": "rector --dry-run",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse --ansi",
        "test:type-coverage": "pest --type-coverage --min=100",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:refacto",
            "@test:lint",
            "@test:types",
            "@test:type-coverage",
            "@test:unit"
        ]
    }
}
